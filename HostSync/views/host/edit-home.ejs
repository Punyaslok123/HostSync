<%- include('../partials/head') %>
</head>
<body class="bg-gradient-to-br from-indigo-900 via-purple-900 to-pink-900 min-h-screen relative overflow-x-hidden">
  
  <!-- Animated Mesh Background -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-br from-blue-600/10 via-purple-600/10 to-pink-600/10"></div>
    <div class="absolute -top-96 -right-96 w-[800px] h-[800px] bg-gradient-to-br from-cyan-400/30 to-blue-600/30 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute -bottom-96 -left-96 w-[900px] h-[900px] bg-gradient-to-tr from-pink-400/30 to-purple-600/30 rounded-full blur-3xl animate-pulse delay-1000"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-gradient-to-r from-violet-400/20 to-indigo-400/20 rounded-full blur-3xl animate-pulse delay-500"></div>
  </div>

  <!-- Floating Particles -->
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute top-20 left-20 w-2 h-2 bg-white/40 rounded-full animate-pulse"></div>
    <div class="absolute top-40 right-32 w-1 h-1 bg-blue-400/60 rounded-full animate-bounce delay-300"></div>
    <div class="absolute bottom-40 left-40 w-3 h-3 bg-pink-400/40 rounded-full animate-pulse delay-700"></div>
    <div class="absolute bottom-20 right-20 w-1 h-1 bg-purple-400/60 rounded-full animate-bounce delay-1000"></div>
  </div>

  <%- include('../partials/nav') %>

  <div class="flex items-center justify-center mt-8 relative z-10 px-4">
    <div class="bg-white/5 backdrop-blur-2xl border border-white/10 p-6 rounded-3xl shadow-2xl shadow-black/20 w-full max-w-md transform hover:scale-[1.01] transition-all duration-500 hover:shadow-purple-500/20 mb-6">
      
      <!-- Glowing Header -->
      <div class="text-center mb-6">
        <div class="inline-block p-3 bg-gradient-to-r from-cyan-500 to-purple-500 rounded-full mb-4 shadow-lg shadow-purple-500/30">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
          </svg>
        </div>
        <h1 class="text-2xl font-extrabold bg-gradient-to-r from-cyan-400 via-purple-400 to-pink-400 bg-clip-text text-transparent mb-1">
          <%= editing ? "Edit Your Space" : "List Your Home" %>
        </h1>
        <p class="text-white/70 text-sm">
          <%= editing ? "Update your listing details" : "Share your space with the world" %>
        </p>
      </div>
      
      <form action="/host/<%= editing ? "edit-home" : "add-home" %>" method="POST" enctype="multipart/form-data" class="space-y-4 mb-6">
        <input type="hidden" name="_id" value="<%=editing ?home._id : ''%>">
        <!-- House Name Input -->
        <div class="relative group">
          <label class="block text-white/80 font-medium mb-2 text-xs uppercase tracking-wide">Property Name</label>
          <div class="relative">
            <div class="absolute inset-0 bg-gradient-to-r from-cyan-500 to-blue-500 rounded-2xl blur opacity-0 group-hover:opacity-30 transition-all duration-500"></div>
            <input 
              class="relative bg-white/10 backdrop-blur-sm border border-white/20 rounded-2xl px-4 py-3 focus:outline-none focus:border-cyan-400 focus:bg-white/15 text-white placeholder-white/50 w-full shadow-xl transition-all duration-300 hover:bg-white/15 focus:shadow-2xl focus:shadow-cyan-500/30 text-sm" 
              placeholder="Enter your property name"
              value="<%= editing? home.houseName : ''%>"
              type="text" 
              name="houseName" 
              required
            />
          </div>
        </div>

        <!-- Price Input -->
        <div class="relative group">
          <label class="block text-white/80 font-medium mb-2 text-xs uppercase tracking-wide">Nightly Rate</label>
          <div class="relative">
            <div class="absolute inset-0 bg-gradient-to-r from-green-500 to-emerald-500 rounded-2xl blur opacity-0 group-hover:opacity-30 transition-all duration-500"></div>
            <input 
              class="relative bg-white/10 backdrop-blur-sm border border-white/20 rounded-2xl px-4 py-3 focus:outline-none focus:border-green-400 focus:bg-white/15 text-white placeholder-white/50 w-full shadow-xl transition-all duration-300 hover:bg-white/15 focus:shadow-2xl focus:shadow-green-500/30 text-sm" 
              value="<%= editing? home.price : ''%>"
              type="text" 
              name="price" 
              placeholder="0.00 per night"
              required
            />
          </div>
        </div>

        <!-- Location Input -->
        <div class="relative group">
          <label class="block text-white/80 font-medium mb-2 text-xs uppercase tracking-wide">Location</label>
          <div class="relative">
            <div class="absolute inset-0 bg-gradient-to-r from-pink-500 to-rose-500 rounded-2xl blur opacity-0 group-hover:opacity-30 transition-all duration-500"></div>
            <input 
              class="relative bg-white/10 backdrop-blur-sm border border-white/20 rounded-2xl px-4 py-3 focus:outline-none focus:border-pink-400 focus:bg-white/15 text-white placeholder-white/50 w-full shadow-xl transition-all duration-300 hover:bg-white/15 focus:shadow-2xl focus:shadow-pink-500/30 text-sm" 
              value="<%= editing? home.location : ''%>"
              type="text" 
              name="location" 
              placeholder="City, State or Country"
              required
            />
          </div>
        </div>

        <!-- Rating Input -->
        <div class="relative group">
          <label class="block text-white/80 font-medium mb-2 text-xs uppercase tracking-wide">Rating</label>
          <div class="relative">
            <div class="absolute inset-0 bg-gradient-to-r from-yellow-500 to-orange-500 rounded-2xl blur opacity-0 group-hover:opacity-30 transition-all duration-500"></div>
            <input 
              class="relative bg-white/10 backdrop-blur-sm border border-white/20 rounded-2xl px-4 py-3 focus:outline-none focus:border-yellow-400 focus:bg-white/15 text-white placeholder-white/50 w-full shadow-xl transition-all duration-300 hover:bg-white/15 focus:shadow-2xl focus:shadow-yellow-500/30 text-sm" 
              value="<%= editing? home.rating : ''%>"
              type="text" 
              name="rating" 
              placeholder="4.5 (1-5 stars)"
              required
            />
          </div>
        </div>

        <!-- File Upload -->
        <div class="relative group">
          <label class="block text-white/80 font-medium mb-1 text-xs uppercase tracking-wide">Property Photo</label>
          <div class="relative">
            <!-- Glowing hover background -->
            <div class="absolute inset-0 bg-gradient-to-r from-purple-500 to-indigo-500 rounded-2xl blur opacity-0 group-hover:opacity-30 transition-all duration-500"></div>
        
            <!-- Upload box -->
            <div class="relative \ bg-white/10 backdrop-blur-sm border-2 border-dashed border-white/30 rounded-2xl px-4 py-3 hover:border-purple-400 hover:bg-white/15 transition-all duration-300 shadow-xl group-hover:shadow-2xl group-hover:shadow-purple-500/30">
          
              <!-- Invisible file input -->
              <input 
                class="absolute inset-0 w-full h-full opacity-0 cursor-pointer" 
                type="file" 
                name="homeImage" 
                accept="image/*" required
              />

              <!-- Upload Label -->
              <div class="text-center">
                <p class="text-white font-semibold text-sm">Upload Your Best Shot</p>
              </div>
            </div>
          </div>
        </div> 

        <!-- Description Textarea -->
        <div class="relative group">
          <label class="block text-white/80 font-medium mb-2 text-xs uppercase tracking-wide">Description</label>
          <div class="relative">
            <div class="absolute inset-0 bg-gradient-to-r from-teal-500 to-cyan-500 rounded-2xl blur opacity-0 group-hover:opacity-30 transition-all duration-500"></div>
            <textarea
              class="relative bg-white/10 backdrop-blur-sm border border-white/20 rounded-2xl px-4 py-3 focus:outline-none focus:border-teal-400 focus:bg-white/15 text-white placeholder-white/50 w-full shadow-xl transition-all duration-300 hover:bg-white/15 focus:shadow-2xl focus:shadow-teal-500/30 resize-none h-20 text-sm" 
              name="description" 
              placeholder="Describe what makes your space unique..."
              required><%= editing ? home.description : '' %></textarea>
          </div>
        </div>

        <!-- Submit Button -->
        <button 
          type="submit" 
          class="relative group w-full bg-gradient-to-r from-cyan-500 via-purple-500 to-pink-500 text-white font-bold py-3 px-8 rounded-2xl shadow-2xl hover:shadow-purple-500/40 transition-all duration-300 transform hover:scale-[1.02] hover:-translate-y-1 overflow-hidden mt-6"
        >
          <div class="absolute inset-0 bg-gradient-to-r from-pink-500 via-purple-500 to-cyan-500 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          <div class="relative flex items-center justify-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-sm">
              <%= editing ? "Update Your Space" : "List Your Home" %>
            </span>
          </div>
        </button>
      </form>
    </div>
  </div>

  <!-- Ambient Lighting Effects -->
  <div class="fixed bottom-0 left-0 w-full h-32 bg-gradient-to-t from-purple-900/20 to-transparent pointer-events-none"></div>
  <div class="fixed top-0 left-0 w-full h-32 bg-gradient-to-b from-indigo-900/20 to-transparent pointer-events-none"></div>
</body>
</html>