<%- include('../partials/head') %>

<body class="bg-gradient-to-br from-slate-900 via-indigo-900 to-purple-900 min-h-screen overflow-x-hidden">

  <%- include('../partials/nav') %>

  <!-- CONTAINER FIX -->
  <div class="max-w-[100vw] overflow-x-hidden">

    <!-- Background Blobs -->
    <div class="relative w-full overflow-hidden pointer-events-none z-0">
      <div class="absolute -top-40 -right-40 w-[300px] h-[300px] bg-purple-500 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-pulse"></div>
      <div class="absolute -bottom-40 -left-40 w-[300px] h-[300px] bg-pink-500 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-pulse" style="animation-delay: 2s;"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[300px] h-[300px] bg-blue-500 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-pulse" style="animation-delay: 4s;"></div>
    </div>

    <div class="mb-7 relative z-10"></div>

    <%- include('../partials/search') %>

    <main class="w-full px-4 py-12 relative z-10">

      <!-- Hero Section -->
      <div class="text-center mb-20">
        <div class="inline-flex items-center justify-center w-24 h-24 bg-gradient-to-r from-pink-500 via-purple-500 to-indigo-500 rounded-full mb-8 shadow-2xl shadow-purple-500/50 animate-pulse">
          <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
        </div>

        <h1 class="text-5xl sm:text-7xl font-black bg-gradient-to-r from-pink-400 via-purple-400 to-indigo-400 bg-clip-text text-transparent mb-6 tracking-tight drop-shadow-2xl">
          Welcome to HostSync
        </h1>

        <p class="text-xl sm:text-2xl text-gray-300 mb-10 max-w-3xl mx-auto leading-relaxed">
          Discover unique places to stay and create unforgettable memories around the world
        </p>

        <div class="w-32 h-1 bg-gradient-to-r from-pink-500 via-purple-500 to-indigo-500 mx-auto rounded-full mb-16 shadow-lg shadow-purple-500/50"></div>

        <div class="space-y-4">
          <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">
            Explore Our Premium Homes
          </h2>
          <p class="text-gray-300 text-lg sm:text-xl">
            Handpicked accommodations for your perfect getaway
          </p>
        </div>
      </div>

      <!-- Homes Grid -->
      <% if (registeredHomes.length > 0) { %>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 w-full px-2 sm:px-4">

        <% registeredHomes.forEach((home, index) => { %>
        <div class="group bg-white/10 backdrop-blur-xl rounded-3xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-500 border border-white/20 hover:border-white/40 transform hover:-translate-y-3 hover:scale-105 animate-fade-in"
          style="animation-delay: <%= index * 150 %>ms;">

          <!-- Image Section -->
          <div class="relative overflow-hidden">
            <img src="<%= home.photo %>" alt="<%= home.houseName %>" class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-700" />

            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>

            <!-- Rating Badge -->
            <div class="absolute top-4 left-4 bg-white/90 backdrop-blur-sm px-3 py-2 rounded-full shadow-lg">
              <div class="flex items-center space-x-1">
                <svg class="w-4 h-4 text-yellow-400 fill-current" viewBox="0 0 24 24">
                  <path
                    d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
                </svg>
                <span class="text-sm font-bold text-gray-800"><%= home.rating %></span>
              </div>
            </div>

            <div class="absolute top-4 right-4">
              <%- include('../partials/favourite', {home: home}) %>
            </div>
          </div>

          <!-- Content Section -->
          <div class="p-6">
            <h3 class="text-xl font-bold text-white mb-3 line-clamp-2 group-hover:text-purple-300 transition-colors duration-300">
              <%= home.houseName %>
            </h3>

            <div class="flex items-center text-gray-300 mb-4">
              <svg class="w-4 h-4 text-purple-400 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5S10.62 6.5 12 6.5s2.5 1.12 2.5 2.5S13.38 11.5 12 11.5z" />
              </svg>
              <span class="text-sm truncate"><%= home.location %></span>
            </div>

            <div class="flex items-baseline mb-6">
              <span class="text-3xl font-bold bg-gradient-to-r from-green-400 to-blue-400 bg-clip-text text-transparent">â‚¹<%= home.price %></span>
              <span class="text-gray-400 ml-1">/ night</span>
            </div>

            <!-- Buttons -->
            <div class="space-y-3">
              <a href="/homes/<%= home._id %>" class="block w-full bg-gradient-to-r from-purple-500 to-indigo-600 text-white text-center font-semibold py-3 px-4 rounded-xl transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-105 backdrop-blur-sm">
                View Details
              </a>

              <a href="/homes/reserve/<%= home._id %>" class="block w-full bg-gradient-to-r from-pink-500 to-rose-600 text-white text-center font-semibold py-3 px-4 rounded-xl transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-105 backdrop-blur-sm">
                Book Now
              </a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>

      <% } else { %>
      <div class="text-center py-24 px-4">
        <div class="bg-white/10 backdrop-blur-xl rounded-3xl p-10 border border-white/20 max-w-xl mx-auto shadow-2xl">
          <div class="mx-auto w-24 h-24 bg-gradient-to-r from-purple-500 to-pink-500 rounded-full flex items-center justify-center mb-6">
            <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
          </div>
          <h3 class="text-3xl font-bold text-white mb-4">No homes available yet</h3>
          <p class="text-gray-300 text-lg mb-6">Be the first to list your amazing property and start hosting guests from around the world!</p>
          <a href="/host/add" class="inline-flex items-center px-8 py-3 bg-gradient-to-r from-purple-500 to-pink-600 text-white font-bold rounded-xl transition-all duration-300 shadow-xl">
            List Your Property
          </a>
        </div>
      </div>
      <% } %>

      <div class="mt-20 w-full max-w-4xl mx-auto">
        <div class="h-px bg-gradient-to-r from-transparent via-purple-500 to-transparent"></div>
        <div class="text-center mt-8 text-gray-400">
          <p class="text-xl">Discover. Experience. Remember.</p>
        </div>
      </div>

    </main>

  </div> <!-- Close overflow-x-hidden container -->

  <style>
    @keyframes fade-in {
      from {
        opacity: 0;
        transform: translateY(30px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .animate-fade-in {
      animation: fade-in 0.8s ease-out forwards;
      opacity: 0;
    }

    .backdrop-blur-xl {
      backdrop-filter: blur(24px);
      -webkit-backdrop-filter: blur(24px);
    }
  </style>
</body>
</html>


