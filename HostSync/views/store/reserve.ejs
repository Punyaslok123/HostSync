  <script>
    const RAZORPAY_KEY = "<%= razorpayKey %>";
  </script>

  <script src="https://checkout.razorpay.com/v1/checkout.js"></script>

  <script>
    const form = document.getElementById("bookingform");
    console.log("razorpay key is ", RAZORPAY_KEY);

    form.addEventListener("submit", async function (event) {
      event.preventDefault();
      const formData = new FormData(form);

      const homeId = formData.get("homeId");

      const dateRange = formData.get("dateRange");

      if (!dateRange || !dateRange.includes("to")) {
        alert("⚠️ Please select both Check-In and Check-Out dates.");
        return;
      }

      const [checkInstr, checkOutStr] = dateRange.split(" to ");

      const checkInDateObj = new Date(checkInstr);
      const checkOutDateObj = new Date(checkOutStr);

      const days = Math.ceil(
        (checkOutDateObj - checkInDateObj) / (1000 * 60 * 60 * 24)
      );

      if (checkOutDateObj <= checkInDateObj) {
        alert(
          "⚠️ Please check your booking dates. Check-Out must be after Check-In."
        );
        return;
      }

      const checkInDate = checkInDateObj.toISOString().split("T")[0];
      const checkOutDate = checkOutDateObj.toISOString().split("T")[0];

      const baseprice = parseInt(formData.get("price"));
      const totalAmount = baseprice * days;

      try {
        const response = await fetch("/create-order", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            homeId,
            amount: totalAmount,
            checkInDate,
            checkOutDate,
          }),
        });

        const data = await response.json();

        if (!data.success) {
          alert("Error creating order");
          return;
        }

        const options = {
          key: RAZORPAY_KEY,
          amount: data.amount,
          currency: data.currency,
          name: "HostSync",
          description: "Booking Payment",
          order_id: data.orderId,

          handler: async function (response) {
            const orderId = response.razorpay_order_id;
            const paymentId = response.razorpay_payment_id;
            const Signature = response.razorpay_signature;

            fetch("/verify-payment", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify({
                paymentId,
                orderId,
                Signature,
                homeId,
                amount: totalAmount,
                checkInDate,
                checkOutDate,
              }),
            })
              .then((res) => res.json())
              .then((data) => {
                if (data.success) {
                  window.location.href = data.redirectUrl;
                } else {
                  alert("⚠️ Payment verification failed. Try again.");
                }
              })
              .catch((err) => {
                console.log("Error veryfing payment ", err);
                alert("❌ Something went wrong. Please contact support.");
              });
          },

          theme: {
            color: "#6366F1",
          },
        };

        const rzp = new Razorpay(options);

        console.log("about to open razorpay");
        rzp.open();
      } catch (err) {
        console.log("Error opening Razorpay:", err);
        alert("Payment initiation failed");
      }
    });
  </script>

  <!-- Flatpickr JS -->
  <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

  <script>
    const bookedDates=<%- JSON.stringify(bookedDates) %>;

    flatpickr("#dateRange",{
